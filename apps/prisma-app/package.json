{
  "name": "@repo/lego-prisma-app",
  "version": "1.0.0",
  "dependencies": {
    "express": "^4.21.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.9.0",
    "prisma": "^6.0.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@prisma/client": "^6.0.1",
    "@prisma/engines": "^6.0.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "fixpack": "^4.0.0",
    "globals": "^15.13.0",
    "gql": "^1.1.2",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "type-graphql": "^2.0.0-rc.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.3"
  },
  "private": true,
  "scripts": {
    "build": "tsc -b && vite build",
    "build:prisma": "yarn prisma:generate",
    "cp": "cp -afvR ../../node_modules/@prisma/client/generator-build ./",
    "dev": "vite --host --port 8888 --debug | tee vite.log",
    "lint": "eslint .",
    "preview": "vite preview",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma && yarn cp",
    "prisma:init": "prisma init --datasource-provider sqlite",
    "prisma:lint": "prisma format --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push --schema=./prisma/schema.prisma",
    "prisma:studio": "prisma studio",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "module"
}
